    <script>
        let array = ['a', '-', 'b', '-', 'c', '-', 'd'];
        for (let i = 0; i < array.length; i++) {
            if (array[i] === '-') {
                array[i] = '_'; 
            }
        }
        console.log("Mảng sau khi thay thế:", array);
    </script>
</body>
