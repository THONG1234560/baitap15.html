<body>
    <script>
        let array = [];
        sum = 0;
        for (let i = 0; i < 10; i++) {
            array.push(parseInt(prompt(`Nhập phần tử thứ ${i + 1}:`)));
            sum = sum + array[i];
        }
        let maxValue = Math.max(...array);
        console.log(`Phần tử lớn nhất là: ${maxValue}`);
        average = sum/10;
        console.log(`Giá trị trung bình của mảng là: ${average}`);
    </script>
</body>
