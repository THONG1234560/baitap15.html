<body>
    <script>
        let array = [];
        for (let i = 0; i < 10; i++) {
            array.push(parseInt(prompt(`Nhập phần tử thứ ${i + 1}:`)));
        }
        let maxValue = Math.max(...array);
        let maxIndex = array.indexOf(maxValue);
        console.log(`Phần tử lớn nhất là ${maxValue} ở vị trí ${maxIndex}`);
    </script>
</body>
</html>
