<body>
    <script>
        let string = prompt("Hãy nhập một chuỗi:");
        if (string) { 
            let count = 0;
            for (let i = 0; i < string.length; i++) {
                if (string[i] !== ' ') {
                    count++;
                }
            }
            console.log("Số ký tự trong chuỗi (không tính khoảng trắng):", count);
        } else {
            console.log("Bạn chưa nhập chuỗi nào.");
        }
    </script>
</body>
</html>
